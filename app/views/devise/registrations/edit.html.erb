<h2 class="text-center page-title">Edit user profile <%#= resource_name.to_s.humanize %></h2>

<div class="container">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-row">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", wrapper: {class: "col-md-6 col-sm-12"} %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", wrapper: {class: "col-md-6 col-sm-12"} %>
      </div>
      <br />

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

      <i>(leave blank if you don't want to change it)</i>
      <div class="form-row">
        <%= f.password_field :password, autocomplete: "new-password", wrapper: {class: "col-md-6 col-sm-12"} %>
        <% if @minimum_password_length %>
        <% end %>
      
        <%= f.password_field :password_confirmation, autocomplete: "new-password", wrapper: {class: "col-md-6 col-sm-12"} %>
      </div>
      <em><%= @minimum_password_length %> characters minimum</em>

      <br />
      <br />
    
      
        <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      
      <div class="form-row justify-content-between px-1">
        <%= f.submit "Update", class: "btn btn-info btn-block" %>
      </div>

      <br />

    
  <% end %>

<div class="form-row justify-content-between px-1">
  <%= button_to "Cancel my account", registration_path(resource_name), 
      data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>

  <%= link_to "Back", :back %>
</div>