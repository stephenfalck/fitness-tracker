<% exercises = ['', 'Running', 'Walking', 'Cycling', 'Swimming', 'Elliptical', 'Rowing', 
'Circuit training', 'HIIT Training', 'Weight training', 'Core training'] %>

<div class="container">
  <div class="row text-center">
    <h1 class="w-100">Activity log</h1>
  </div>

<div class="row justify-content-center">

<% @activities.each do |activity| %>
    <% if current_user == activity.user %>
      <div class="card col-sm-12 col-md-4 activities" id="<%= activity.category_id %>">
        
        <img src="" class="card-img-top" alt="...">
        
        
        <div class="card-body">
          <h4 class="card-title"><%= exercises[activity.category_id] %></h4>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Duration: <%= activity.duration %></li>
            <li class="list-group-item">Date: <%= activity.date %></li>
          </ul>
        
        <div class="card-body">
          <%= link_to 'Edit', edit_activity_path(activity), class: "card-link" %>
          <%= link_to 'Destroy', activity_path(activity),
            method: :delete,
            class: "card-link",
            data: { confirm: 'Are you sure?' } %>
        </div>

        </div>
        
    
    <% end %>
  <% end %>

</div>
 <%= link_to 'New Entry', categories_path, method: :get %>
</div>