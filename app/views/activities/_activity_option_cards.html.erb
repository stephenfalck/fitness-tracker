
<% @categories.each do |category| %>
    
    <div class="card bg-dark text-white col-sm-6 col-md-3 categories" id="<%= category.id %>">
        <%= image_tag "#{category.image}", class: "card-img category-card-images", alt: "..."  %>
        <%=  link_to new_activity_path(category.id) do%>
            <div class="card-img-overlay">
                <h4 class="card-title text-center category-card-title"><%= category.name %></h4>
            </div>
        <% end %>
    </div>
    
<% end %>