<div class="container pb-4" id="timer-page">
    
    <div class="row justify-content-center">
        <div class="col-12 align-self-start">
            <h1 class="mt-4" id="timer-header">Timer</h1>
        </div>
    </div>


        
    <div class="row justify-content-center w-100">
        <div class="jumbotron" id="timer-jumbo">
            <div class="col-12 text-center">
                <h1 id="timer">00 : 00</h1>
            </div>
            <div class="col-12 text-center">
                <button type="button" class="btn btn-lg btn-info mx-2" id="toggle">Start</button> 
                <button type="button" class="btn btn-lg btn-secondary mx-2" id="reset">Reset</button>
            </div>
        </div>
     </div>
   
    
   

    <div class="row justify-content-center">
        <%= link_to activities_path do%>
            <button type="button" class="btn btn-lg btn-primary" id="save">Save</button>
        <% end %>
    </div>
</div>